<UserControl
    x:Class="Metatalente.Avalonia.Views.ResultControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gb="using:GroupBox.Avalonia.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Metatalente.Avalonia.ViewModels"
    d:DesignHeight="175"
    d:DesignWidth="375"
    x:DataType="vm:ResultControlViewModel"
    mc:Ignorable="d">
    <gb:GroupBox Header="Würfelergebnisse" Theme="{StaticResource GroupBoxClassic}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Margin="10,7,10,0"
                Text="Würfelergebnisse:" />
            <TextBlock
                Name="StringDiceResult"
                Grid.Row="0"
                Grid.Column="1"
                Margin="10,7,10,0" />
            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Margin="10,10,10,0"
                Text="Punkte übrig behalten:" />
            <TextBlock
                Name="StringPointsResult"
                Grid.Row="1"
                Grid.Column="1"
                Margin="10,10,10,0" />
            <TextBox
                Name="TBoxTextResult"
                Grid.Row="2"
                Grid.ColumnSpan="2"
                Margin="10"
                Background="{x:Null}"
                BorderThickness="0"
                Cursor="Arrow"
                IsReadOnly="True"
                TextWrapping="Wrap" />
        </Grid>
    </gb:GroupBox>
</UserControl>
