<ContentDialog
    x:Class="DSAMetatalente.Views.LoadFromToolDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:DSAMetatalente.ViewModels"
    Title="Character laden"
    CloseButtonText="Abbrechen"
    PrimaryButtonCommand="{Binding LoadCharacterCommand}"
    PrimaryButtonText="OK"
    Style="{ThemeResource DefaultContentDialogStyle}">
    <ContentDialog.DataContext>
        <vm:LoadFromToolViewModel />
    </ContentDialog.DataContext>
    <StackPanel Margin="10">
        <TextBlock Text="Wähle einen Charakter aus der Liste" />
        <ListView
            x:Name="Characters"
            ItemsSource="{Binding Characters}"
            SelectedItem="{Binding SelectedCharacter, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
            SelectionMode="Single" />
    </StackPanel>
</ContentDialog>
