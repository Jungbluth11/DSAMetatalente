<Page
    x:Class="DSAMetatalente.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:DSAMetatalente.Controls"
    xmlns:gb="using:UnoGroupBox"
    xmlns:utu="using:Uno.Toolkit.UI"
    xmlns:vm="using:DSAMetatalente.ViewModels"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.DataContext>
        <vm:MainPageViewModel />
    </Page.DataContext>
    <ScrollViewer IsTabStop="True">
        <Grid utu:SafeArea.Insets="VisibleBounds">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <MenuBar Grid.Row="0">
                <MenuBarItem Title="Charakter laden">
                    <MenuFlyoutItem Name="MenuItemCharacterLoadFromTool" Text="... aus Heldentool" />
                    <MenuFlyoutItem Name="MenuItemCharacterLoadFromFile" Text="... aus Datei" />
                </MenuBarItem>
                <MenuBarItem Title="Option">
                    <MenuFlyoutSubItem Text="Theme">
                        <RadioMenuFlyoutItem GroupName="Theme" Text="Hell" />
                        <RadioMenuFlyoutItem GroupName="Theme" Text="Dunkel" />
                        <RadioMenuFlyoutItem GroupName="Theme" Text="System" />
                    </MenuFlyoutSubItem>
                </MenuBarItem>
                <MenuBarItem Name="MenuItemAbout" Title="Über" />
                <MenuBarItem
                    Name="MenuItemUpdate"
                    Title="Update Verfügbar"
                    Visibility="Collapsed" />
            </MenuBar>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="235" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel
                    Grid.Row="0"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal">
                    <TextBlock Margin="10,10,0,10" Text="MU" />
                    <NumberBox SpinButtonPlacementMode="Compact" Value="{Binding Mu, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock Margin="20,10,0,10" Text="IN" />
                    <NumberBox SpinButtonPlacementMode="Compact" Value="{Binding In, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock Margin="20,10,0,10" Text="GE" />
                    <NumberBox SpinButtonPlacementMode="Compact" Value="{Binding Ge, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock Margin="20,10,0,10" Text="FF" />
                    <NumberBox SpinButtonPlacementMode="Compact" Value="{Binding Ff, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="0">
                    <Border BorderBrush="Black" BorderThickness="1">
                        <StackPanel>
                            <controls:SkillControl Text="Wildnisleben" Value="{Binding SkillWildnisleben, UpdateSourceTrigger=PropertyChanged}" />
                            <controls:SkillControl Text="Sinnenschärfe" Value="{Binding SkillSinnenschaerfe, UpdateSourceTrigger=PropertyChanged}" />
                            <controls:SkillControl Text="Pflanzenkunde" Value="{Binding SkillPflanzenkunde, UpdateSourceTrigger=PropertyChanged}" />
                            <controls:SkillControl Text="Tierkunde" Value="{Binding SkillTierkunde, UpdateSourceTrigger=PropertyChanged}" />
                            <controls:SkillControl Text="Fährtensuchen" Value="{Binding SkillFaehrtensuchen, UpdateSourceTrigger=PropertyChanged}" />
                            <controls:SkillControl Text="Schleichen" Value="{Binding SkillSchleichen, UpdateSourceTrigger=PropertyChanged}" />
                            <controls:SkillControl Text="Sich Verstecken" Value="{Binding SkillSichVerstecken, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </Border>
                    <gb:GroupBox
                        Name="GroupboxChracterKnownTerrains"
                        Margin="5,0,0,0"
                        Header="Geländekunden"
                        IsEnabled="False"
                        Theme="Fluent">
                        <ItemsControl Name="KnownTerrainsPanel">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Vertical" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </gb:GroupBox>
                </StackPanel>
                <Grid Grid.Row="1" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="10"
                        Text="Monat" />
                    <ComboBox
                        Name="DropdownMonth"
                        Grid.Row="0"
                        Grid.Column="1"
                        Width="350"
                        Margin="10" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="10"
                        Text="Region" />
                    <ComboBox
                        Name="DropdownRegion"
                        Grid.Row="1"
                        Grid.Column="1"
                        Width="350"
                        Margin="10" />
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="10"
                        Text="Landschaft" />
                    <ComboBox
                        Name="DropdownLandscape"
                        Grid.Row="2"
                        Grid.Column="1"
                        Width="350"
                        Margin="10" />
                    <CheckBox
                        x:Name="CbIsKnownTerrain"
                        Grid.Row="3"
                        Grid.Column="1"
                        Margin="10"
                        Content="Geländekunde vorhanden" />
                    <gb:GroupBox
                        Grid.Row="4"
                        Grid.ColumnSpan="2"
                        Margin="10"
                        Header="Beschreibung"
                        Theme="Fluent">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="5,10,10,10"
                                Text="Essbare Pflanzen:" />
                            <TextBlock
                                x:Name="StringForaging"
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="10" />
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="5,10,10,10"
                                Text="Wildvorkommen:" />
                            <TextBlock
                                x:Name="StringWildlife"
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="10" />
                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="0"
                                Margin="5,10,10,10"
                                Text="Mögliche Geländekunde:" />
                            <TextBlock
                                x:Name="StringKnownTerrain"
                                Grid.Row="2"
                                Grid.Column="1"
                                Margin="10" />
                        </Grid>
                    </gb:GroupBox>
                </Grid>
                <TabView
                    Name="TabView"
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Grid.Column="2"
                    IsAddTabButtonVisible="False">
                    <TabView.TabItems>
                        <TabViewItem
                            Name="TabForaging"
                            Header="Nahrung suchen"
                            IsClosable="False">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="10"
                                    Text="Dauer" />
                                <NumberBox
                                    Name="InputDurationForaging"
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="10"
                                    VerticalAlignment="Top"
                                    Minimum="60"
                                    SpinButtonPlacementMode="Compact"
                                    Value="60" />
                                <Button
                                    Name="BtnRollForaging"
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    Width="100"
                                    Height="30"
                                    Margin="10"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Content="Würfeln" />
                                <controls:ResultControl
                                    x:Name="ResultControlForaging"
                                    Grid.Row="1"
                                    Grid.ColumnSpan="3" />
                            </Grid>
                        </TabViewItem>
                        <TabViewItem
                            Name="TabPlantSeeking"
                            Header="Kräuter suchen"
                            IsClosable="False">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="10"
                                    Text="Dauer" />
                                <NumberBox
                                    Name="InputDurationPlantSeeking"
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="10"
                                    Minimum="60"
                                    SpinButtonPlacementMode="Compact"
                                    Value="60" />
                                <Button
                                    Name="BtnRollPlantseeking"
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    Width="100"
                                    Height="30"
                                    Margin="10"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Content="Würfeln" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="10"
                                    Text="Pflanze" />
                                <CheckBox
                                    Name="CbCoincidencePlantSeeking"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="10"
                                    VerticalAlignment="Center"
                                    Content="Zufall" />
                                <ComboBox
                                    Name="DropdownPlant"
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    Margin="10" />
                                <Grid
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="2"
                                    Margin="5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Margin="5"
                                        Text="Bestimmung:" />
                                    <TextBlock
                                        Name="StringIdentificationMod"
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Margin="5" />
                                    <TextBlock
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Margin="5"
                                        Text="Vorkommen:" />
                                    <TextBlock
                                        Name="StringOccurrence"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Margin="5" />
                                    <TextBlock
                                        Grid.Row="2"
                                        Grid.Column="0"
                                        Margin="5"
                                        Text="Grundmenge:" />
                                    <TextBlock
                                        Name="StringLootPlantSeeking"
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        Margin="5"
                                        TextWrapping="Wrap" />
                                </Grid>
                                <controls:ResultControl
                                    x:Name="ResultControlPlantSeeking"
                                    Grid.Row="4"
                                    Grid.ColumnSpan="3" />
                            </Grid>
                        </TabViewItem>
                        <TabViewItem
                            Name="TabHunting"
                            Header="Jagen gehen"
                            IsClosable="False">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="10"
                                    Text="Dauer" />
                                <NumberBox
                                    Name="InputDurationHunting"
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="10"
                                    Minimum="60"
                                    SpinButtonPlacementMode="Compact" />
                                <Button
                                    Name="BtnRollHunting"
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    Width="100"
                                    Height="30"
                                    Margin="10"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Content="Würfeln" />
                                <RadioButton
                                    Name="RadioHuntingSkillPirschjagd"
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Content="Pirschjagd" />
                                <RadioButton
                                    Name="RadioHuntingSkillAnsitzjagd"
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Content="Ansitzjagd" />
                                <CheckBox
                                    Name="CbIsScharfschuetze"
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    Margin="10,0,0,0"
                                    Content="Scharfschütze" />
                                <CheckBox
                                    Name="CbIsMeisterschuetze"
                                    Grid.Row="2"
                                    Grid.Column="2"
                                    Margin="10,0,0,0"
                                    Content="Meisterschütze" />
                                <TextBlock
                                    Grid.Row="3"
                                    Grid.Column="0"
                                    Margin="10"
                                    Text="Tier" />
                                <CheckBox
                                    Name="CbCoincidenceHunting"
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    Margin="10"
                                    VerticalAlignment="Center"
                                    Content="Zufall" />
                                <ComboBox
                                    Name="DropdownAnimal"
                                    Grid.Row="3"
                                    Grid.Column="2"
                                    Margin="10" />
                                <TextBlock
                                    Grid.Row="4"
                                    Grid.Column="0"
                                    Margin="10"
                                    Text="Waffe" />
                                <NumberBox
                                    Name="InputSkillWeapon"
                                    Grid.Row="4"
                                    Grid.Column="1"
                                    Margin="10"
                                    Minimum="0"
                                    SpinButtonPlacementMode="Compact" />
                                <ComboBox
                                    Name="DropdownWeapon"
                                    Grid.Row="4"
                                    Grid.Column="2"
                                    Margin="10" />
                                <Grid
                                    Grid.Row="5"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="2"
                                    Margin="5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Margin="5"
                                        Text="Jagdschwierigkeit:" />
                                    <TextBlock
                                        Name="StringDifficulty"
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Margin="5" />
                                    <TextBlock
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Margin="5"
                                        Text="Beute:" />
                                    <TextBlock
                                        Name="StringLootHunting"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Margin="5"
                                        TextWrapping="Wrap" />
                                </Grid>
                                <controls:ResultControl
                                    x:Name="ResultControlHunting"
                                    Grid.Row="6"
                                    Grid.ColumnSpan="3" />
                            </Grid>
                        </TabViewItem>
                    </TabView.TabItems>
                </TabView>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
